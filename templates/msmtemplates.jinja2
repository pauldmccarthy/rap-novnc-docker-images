RUN cd /opt/workbench                && \
    tar xf S1200_MSMAll3T1071.tar.gz && \
    rm S1200_MSMAll3T1071.tar.gz

RUN mkdir -p  /opt/workbench/bin/
ADD wb_view   /opt/workbench/bin/
RUN chmod a+x /opt/workbench/bin/wb_view

